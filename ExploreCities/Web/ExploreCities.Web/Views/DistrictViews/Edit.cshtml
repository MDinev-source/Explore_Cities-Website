@model ExploreCities.Web.ViewModels.DistrictViews.DistrictViewEditModel

@{
    ViewData["Title"] = "Edit";
}

<form method="post" class="col-md-6 offset-md-3" asp-area="" asp-controller="DistrictViews" asp-action="Edit"
      enctype="multipart/form-data">

    <h1 class="text-center">@this.ViewData["Title"]</h1>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DistrictName"></label>
        <input asp-for="DistrictName" class="form-control" />
        <span asp-validation-for="DistrictName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArrivalYear"></label>
        <input asp-for="ArrivalYear" class="form-control" />
        <span asp-validation-for="ArrivalYear" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartureYear"></label>
        <input asp-for="DepartureYear" class="form-control" />
        <span asp-validation-for="DepartureYear" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PictureUrl"></label>
        <input asp-for="PictureUrl" class="form-control">
        <span asp-validation-for="PictureUrl" class="small text-danger"></span>
    </div>

    @await this.Html.PartialAsync("_RateEditPartial")

    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" rows="4" class="form-control" placeholder="Update comment for: street lighting, street pollution, street quality, metro/train/bus station existence and other objects in region."></textarea>
        <span asp-validation-for="Comment" class="small text-danger"></span>
    </div>

    <div class="row">
        <input type="submit" style="width: 50%" value="Edit" class="btn btn-primary col md-3 mr-1 " />
        <a class="btn btn-warning col md-3 ml-1" style="width: 50%" asp-area="" asp-controller="DistrictViews" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>
</form>

