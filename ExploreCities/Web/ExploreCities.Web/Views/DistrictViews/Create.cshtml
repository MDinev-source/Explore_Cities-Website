@model ExploreCities.Web.ViewModels.DistrictViews.CreateDistrictViewInputModel

@{ this.ViewData["Title"] = "Create new district view";

    var cityItems = this.Model.Cities
        .Select(x => new SelectListItem(x.Value, x.Key)); }

<div class="row justify-content-center">
    <form class="col-md-6" enctype="multipart/form-data" asp-area="" asp-controller="DistrictViews" asp-action="Create" method="post">

        <h1 class="text-center">@this.ViewData["Title"]</h1>

        <div asp-validation-summary="All" class="text-danger"></div>
        <hr />

        <div class="form-group">
            <label asp-for="CityId"></label>
            <select asp-for="CityId" class="form-control" asp-items="cityItems"></select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DistrictName"></label>
            <input asp-for="DistrictName" class="form-control" />
            <span asp-validation-for="DistrictName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ArrivalYear"></label>
            <input asp-for="ArrivalYear" class="form-control" />
            <span asp-validation-for="ArrivalYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DepartureYear"></label>
            <input asp-for="DepartureYear" class="form-control" />
            <span asp-validation-for="DepartureYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PictureUrl"></label>
            <input asp-for="PictureUrl" class="form-control">
            <span asp-validation-for="PictureUrl" class="small text-danger"></span>
        </div>

        @await this.Html.PartialAsync("_RatePartial")

        <div class="form-group">
            <label asp-for="Comment"></label>
            <textarea asp-for="Comment" rows="4" class="form-control" placeholder="Add comment for: street lighting, street pollution, street quality, metro/train/bus station existence and other objects in region."></textarea>
            <span asp-validation-for="Comment" class="small text-danger"></span>
        </div>
        <div class="row justify-content-center">
            <input type="submit" value="Create" class="btn btn-primary" style="width: 150px" />
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}