@model ExploreCities.Web.ViewModels.DistrictViews.DistrictViewsDetailsViewModel

<div class="form-group mb-2">
    <div class="col-md-7">
        <label class="text-center" asp-for="AirPollutionRating">Air pollution</label>
        <div class="progress">
            @if ((int)Model.AirPollutionRating == 1)
            {
                <div class="progress-bar bg-danger" role="progressbar" style="width: 12%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                    @Model.AirPollutionRating
                </div>
            }
            @if ((int)Model.AirPollutionRating == 2)
            {
                <div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                    @Model.AirPollutionRating
                </div>
            }
            @if ((int)Model.AirPollutionRating == 3)
            {
                <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                    @Model.AirPollutionRating
                </div>
            }
        </div>
    </div>
</div>

