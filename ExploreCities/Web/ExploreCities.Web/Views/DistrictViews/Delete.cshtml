@model ExploreCities.Web.ViewModels.DistrictViews.DistrictViewDeleteViewModel

@{ this.ViewData["Title"] = "Delete District View"; }

<div class="row justify-content-center">
    <form asp-area="" asp-controller="DistrictViews" asp-action="Delete" method="post" class="text-center col-md-6">
        <fieldset disabled="">
            <h1>@this.ViewData["Title"]</h1>
            <hr />
            <div class=form-group>
                <label asp-for="@Model.PictureUrl"></label>
                <img style="height: 300px; width: 100%;" class="card-img-top" src="@Model.PictureUrl" alt="image" />
            </div>

            <div class="form-group">
                <label asp-for="CityName"></label>
                <input asp-for="CityName" class="form-control col-md-12" placeholder="@Model.CityName" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistrictName"></label>
                <input asp-for="DistrictName" class="form-control col-md-12" placeholder="@Model.DistrictName" />
                <span asp-validation-for="DistrictName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment"></label>
                <textarea asp-for="Comment" rows="4" readonly class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="alert alert-danger">
                <h5>Are you shure you want to delete district view from @Model.DistrictName district, @Model.CityName city.</h5>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-warning">Delete district view</button>
    </form>
</div>




  